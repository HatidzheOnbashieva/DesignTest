<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tvGenderVal"
        android:layout_width="0dp"
        android:text="Woman"
        android:layout_marginTop="@dimen/default_margin"
        android:textSize="@dimen/font_size"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cbGender"/>

    <CheckBox
        android:id="@+id/cbGender"
        android:layout_width="@dimen/checkBox_width"
        android:layout_height="@dimen/checkBox_height"
        android:button="@drawable/custom_checkbox"
        app:layout_constraintTop_toTopOf="@id/tvGenderVal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvGenderVal"/>

</androidx.constraintlayout.widget.ConstraintLayout>